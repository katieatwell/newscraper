<div class="container">
    <div class="row"></div>
    <div class="row"></div>
    <div class="row">
        <div class="col s4">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title"><h5 style="font-weight: 100;">Most recent comment about this article:</h4></span>
                    <p><i>"{{data.comment.body}}"</i></p>
                </div>
            </div>
        </div>
        <div style="border-style: solid; border-width: 2px; border-color: blue-grey" class="col s8">
            <h4 style="font-weight: 100;">Add a comment about... <br><br><i>"{{data.title}}":</i></h4>
            <br>
            <br>
            <form class="col s12">
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">mode_edit</i>
                        <textarea id="commentText" class="materialize-textarea"></textarea>
                        <br>
                        <button class="submitComment" data-id={{data._id}}>Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
